<Window x:Class="ProgramacaoIV.Exercicios.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramacaoIV.Exercicios"
        mc:Ignorable="d"
        Title="Atividades" Height="450" Width="839"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="5,5,90,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="45" />
            <RowDefinition Height="45" />
            <RowDefinition Height="45" />
            <RowDefinition Height="45" />
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button
            x:Name="btnExercicioUm"
            Grid.Column="1"
            Grid.Row="1"
            Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"
            Width="145"
            ToolTip="Soma de Dois Números (Inteiros)"
            Content="Exercício 1"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" 
            Click="btnExercicioUm_Click" />

        <Button
            x:Name="btnExercicioDois"
            Grid.Column="1"
            Grid.Row="2"
            Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"
            Width="145"
            ToolTip="Conversão de Celsius para Farenheit"
            Content="Exercicio 2"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
            Click="btnExercicioDois_Click" />

        <Button
            x:Name="btnExercicioTres"
            Grid.Column="1"
            Grid.Row="3"
            Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"
            Width="145"
            ToolTip="Dias Até o Próximo Aniversário (Datas)"
            Content="Exercicio 3"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
            Click="btnExercicioTres_Click"  />

        <Button
            x:Name="btnExercicioQuatro"
            Grid.Column="1"
            Grid.Row="4"
            Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"
            Width="145"
            ToolTip="Verificador de Maioridade (Booleano)"
            Content="Exercicio 4"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
            Click="btnExercicioQuatro_Click" />

        <Button
            x:Name="btnExercicioCinco"
            Grid.Column="1"
            Grid.Row="5"
            Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"
            Width="145"
            ToolTip="Exibir Descrição de Enum (Enumerações)"
            Content="Exercicio 5"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
            Click="btnExercicioCinco_Click" />

        <Button
            x:Name="btnExercicioSeis"
            Grid.Column="2"
            Grid.Row="1"
            Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"
            Width="145"
            ToolTip="Contador de Cliques (Inteiros)"
            Content="Exercicio 6"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
            Click="btnExercicioSeis_Click" />

        <Button 
            x:Name="btnExercicioSete"
            Grid.Column="2"
            Grid.Row="2"
            Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"
            Width="145"
            ToolTip="Simulador de Pagamento Parcelado (Ponto Flutuante)"
            Content="Exercicio 7"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
            Click="btnExercicioSete_Click" />

        <Button 
            x:Name="btnExercicioOito"
            Grid.Column="2"
            Grid.Row="3"
            Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"
            Width="145"
            ToolTip="Verificar Dia da Semana (Datas e Enumerações)"
            Content="Exercicio 8"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
            Click="btnExercicioOito_Click" />

        <Button 
            x:Name="btnExercicioNove"
            Grid.Column="2"
            Grid.Row="4"
            Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"
            Width="145"
            ToolTip=""
            Content="Exercicio 9"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
            Click="btnExercicioNove_Click" />

        <Button 
            x:Name="btnExercicioDez"
            Grid.Column="2"
            Grid.Row="5"
            Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"
            Width="145"
            ToolTip=""
            Content="Exercicio 10"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
            Click="btnExercicioDez_Click" />

    </Grid>
</Window>
